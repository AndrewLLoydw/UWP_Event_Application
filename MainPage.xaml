<Page
    x:Class="EventApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EventApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="Halloween Fest" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center"/>


        <TextBlock Grid.Column="0" Grid.Row="1" Text="Välj ett av följande alternativ nedan" FontSize="16" Margin="0, 20, 0, 0" HorizontalAlignment="Center"/>

        <StackPanel Grid.Column="0" Grid.Row="2" Margin="0, 40, 0, 100">
            <TextBlock Text="Registrera en ny deltagare" FontSize="30" FontWeight="Light" HorizontalAlignment="Center"/>
            <Button x:Name="btnClickRegister" Content="Tryck här" Width="250" Height="40" Margin="0, 20, 0, 0" HorizontalAlignment="Center" Click="Button_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="3" Margin="0, 0, 0,100">
            <TextBlock Text="Avregistrera deltagare" FontSize="30" FontWeight="Light" HorizontalAlignment="Center"/>
            <Button x:Name="btnClickRemove" Content="Tryck här" Width="250" Height="40" Margin="0, 20, 0, 0" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="4" Margin="0, 0, 0, 100">
            <TextBlock Text="Visa lista på alla deltagare" FontSize="30" FontWeight="Light" HorizontalAlignment="Center"/>
            <Button x:Name="btnClickShowList" Content="Tryck här" Width="250" Height="40" Margin="0, 20, 0, 0" HorizontalAlignment="Center" Click="btnClickShowList_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="5" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <TextBlock x:Name="generatedCode" Text="" FontSize="20" HorizontalAlignment="Center"/> 
            <Button x:Name="btnGenerateCode" Content="Generera Rabattkod" Margin="0, 0, 0, 0" Click="btnGenerateCode_Click"/>
        </StackPanel>

        <Button x:Name="btnCloseUserInfoLW" Grid.Column="1" Grid.Row="0" Content="Stäng lista" FontSize="20" HorizontalAlignment="Center" Click="btnCloseUserInfoLW_Click" Margin="0,0,0,0" Visibility="Collapsed"/>

        <StackPanel x:Name="inputRegisterUser" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Visibility="Collapsed" Margin="0, 40, 0, 0"  HorizontalAlignment="Center">
            <TextBlock Text="Vänligen fyll i dina uppgifter" FontSize="30" FontWeight="Light" HorizontalAlignment="Center"/>
            <TextBlock Text="Förnamn" FontSize="16" FontWeight="Light" />
            <TextBox Text="" Margin="0, 10, 0, 10"/>
            <TextBlock Text="Efternamn" FontSize="16" FontWeight="Light"/>
            <TextBox Text="" Margin="0, 20, 0, 10"/>
            <TextBlock Text="E-postadress" FontSize="16" FontWeight="Light"/>
            <TextBox Text="" Margin="0, 20, 0, 10"/>
            <Button x:Name="btnRegisterUserDone" Content="Tryck här" Width="250" Height="auto" Margin="0, 0, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="btnRegisterUserDone_Click"/>
        </StackPanel>

        
        
        <ListView x:Name="showUserInformationLW" Grid.Column="1" Grid.Row="2" Grid.RowSpan="4" Visibility="Collapsed">
            <ListViewItem HorizontalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                    
                    <TextBlock x:Name="userFullNameLW" Grid.Row="0" Text="André Lillhannus" FontSize="16"/>
                    <TextBlock x:Name="userEmailLW" Grid.Row="2" Text="adde.l@live.se" FontWeight="Light"/>
                    
                    </Grid>

                    <Button x:Name="btnDeleteUserInfo" Grid.Column="1" Content="Ta bort" Margin="500,0,0,0"/>
                    
                </Grid>
                
            </ListViewItem>
            
        </ListView>
        
    </Grid>
    
</Page>